<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <ListPreference
        app:defaultValue="system"
        app:entries="@array/theme_options"
        app:entryValues="@array/theme_values"
        app:key="theme_preference"
        app:summary="Выберите тему приложения"
        app:title="Тема приложения" />
    <ListPreference
        app:defaultValue="holo_green_light"
        app:entries="@array/header_color_entries"
        app:entryValues="@array/header_color_values"
        app:key="header_color_preference"
        app:summary="Выберите цвет"
        app:title="Цвет заголовка" />
</PreferenceScreen>

